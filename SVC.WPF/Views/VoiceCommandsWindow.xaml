<Window x:Class="SVC.WPF.Views.VoiceCommandsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SVC.WPF.Views"
        mc:Ignorable="d"
        Title="Available Voice Commands" 
        Height="450" Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Style="{DynamicResource {x:Type Window}}"
        WindowStyle="SingleBorderWindow">
    <Border CornerRadius="10" Padding="20" Margin="10" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- ScrollViewer content -->
                <RowDefinition Height="Auto"/>
                <!-- Button -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
               Text="Available Voice Commands"
               FontSize="20"
               FontWeight="Bold"
               Margin="0,0,0,10" />

            <!-- Command List -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Margin="0,5" Text="• open library" FontSize="14"/>
                    <TextBlock Margin="0,5" Text="• open store" FontSize="14"/>
                    <TextBlock Margin="0,5" Text="• open friends" FontSize="14"/>
                    <TextBlock Margin="0,5" Text="• open settings" FontSize="14"/>
                    <TextBlock Margin="0,5" Text="• open downloads" FontSize="14"/>
                    <TextBlock Margin="0,5" Text="• open gamename" FontSize="14"/>
                    <TextBlock Margin="0,5" Text="• start voice recognition / start voice commands" FontSize="14"/>
                    <TextBlock Margin="0,5" Text="• stop voice recognition / stop voice commands" FontSize="14"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Close Button -->
            <Button Grid.Row="2"
            Content="Close"
            Width="80"
            Height="30"
            HorizontalAlignment="Right"
            Margin="0,20,0,0"
            Click="Close_Click" />
        </Grid>
    </Border>
</Window>
