<Window x:Class="SVC.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SVC.WPF.Views" xmlns:viewmodels="clr-namespace:SVC.WPF.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        mc:Ignorable="d"
        Title="Steam Voice Commands" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Keybind input + buttons -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="Set Keybind:" Margin="0,0,5,0" VerticalAlignment="Center"/>
            <TextBox x:Name="KeybindTextBox"
             Width="200"
             Margin="0,0,5,0"
             PreviewKeyDown="KeybindTextBox_PreviewKeyDown"
             PreviewKeyUp="KeybindTextBox_PreviewKeyUp"
             Text="{Binding KeybindDisplayText, Mode=OneWay}"
             IsReadOnly="True"
             />
            <Button Content="Save" Click="SaveKeybind_Click"
            IsEnabled="{Binding CanSaveKeybind}" Margin="0,0,5,0" Padding="10,5" VerticalAlignment="Center"/>
            <Button Content="Clear" Click="ClearKeybind_Click" Margin="0,0,5,0" Padding="10,5" VerticalAlignment="Center"/>
            <Button Content="Delete Saved" Click="DeleteSavedKeybind_Click" Padding="10,5" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Save confirmation -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding KeybindSaveMessage}" 
           Foreground="Green" FontWeight="Bold" Margin="0,5,0,5" HorizontalAlignment="Right"/>

        <!-- Display currently saved keybind -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Margin="0,5,0,5" HorizontalAlignment="Right">
            <TextBlock Text="{Binding PrefixSavedKeybindDisplayText}" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding SavedKeybindDisplayText}" Margin="0,0,5,0"/>
        </StackPanel>
        
        <!-- CheckBox: Auto-start listening -->
        <CheckBox Grid.Row="3" Grid.Column="0" Click="AutoStartCheckbox_Click" Initialized="AutoStartCheckbox_Initialized" x:Name="AutoStartCheckbox" Content="Start listening on launch" Margin="0,5,5,5" HorizontalAlignment="Right"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Vertical" Margin="0,20,0,0">
            <Button Content="Show Voice Commands" Click="ShowCommands_Click" Height="40" Margin="0,0,0,10"/>
            <Button Content="Show Installed Games" Click="ShowGames_Click" Height="40" Margin="0,0,0,10"/>
            <Button Content="Toggle Voice Recognition" Click="ToggleRecognition_Click" Height="40" Margin="0,0,0,10"/>
            <Grid Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".25*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Voice recognition status:"/>
                <TextBlock Grid.Column="1" Text="{Binding VoiceRecognitionActiveLabel}">
                    <TextBlock.Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding VoiceRecognitionActiveLabel}" Value="ACTIVE">
                                    <Setter Property="Foreground" Value="Red"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding VoiceRecognitionActiveLabel}" Value="INACTIVE">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontWeight" Value="Normal"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </StackPanel>

        <!-- Label: Current Voice Command -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Recognised Command:"/>
        <TextBlock Grid.Row="6" Grid.Column="0" x:Name="RecognisedCommandText" FontWeight="Bold"/>
    </Grid>
</Window>
