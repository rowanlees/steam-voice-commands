<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Background color-->
    <Color x:Key="WindowBackgroundColor">#F5F5F5</Color>
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}" />
    <Style TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{DynamicResource WindowBackgroundBrush}" />
    </Style>

    <!--Text color-->
    <Color x:Key="TextColor">#000000</Color>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
    </Style>
    
    <!--Button color-->
    <Color x:Key="ButtonBackgroundColor">#E0E0E0</Color>
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}" />

        <!--Button mouse over background color-->
    <Color x:Key="ButtonMouseOverBackgroundColor">#cdf4fa</Color>
    <SolidColorBrush x:Key="ButtonMouseOverBackgroundBrush" Color="{StaticResource ButtonMouseOverBackgroundColor}" />

    <!--Border style -->
    <Color x:Key="BorderBackgroundColor">#F0F0F0</Color>
    <SolidColorBrush x:Key="BorderBackgroundBrush" Color="{StaticResource BorderBackgroundColor}" />
    <Color x:Key="BorderBrushColor">#ddd</Color>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderBrushColor}" />
    <Style TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{DynamicResource BorderBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}" />
    </Style>

    <!--ListBox style-->
    <Color x:Key="ListBoxBackgroundColor">#F0F0F0</Color>
    <SolidColorBrush x:Key="ListBoxBackgroundBrush" Color="{StaticResource ListBoxBackgroundColor}" />
    <Style TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="{DynamicResource ListBoxBackgroundBrush}" />
    </Style>
    
</ResourceDictionary>